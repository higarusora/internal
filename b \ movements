class Movement:
    def __init__(self, x=0, y=0):
        self.x = x
        self.y = y

    def move_up(self, distance=1):
        self.y += distance

    def move_down(self, distance=1):
        self.y -= distance

    def move_left(self, distance=1):
        self.x -= distance

    def move_right(self, distance=1):
        self.x += distance

    def get_position(self):
        return self.x, self.y
